@using ShoppingApplication.Models
@model SubCategory
@{
    ViewBag.Title = "EditSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Edit SubCategory</h2>
            <div class="panel-body">
                @using (Html.BeginForm("EditSubCategory", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.Id);
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-tag"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "SubCategory Name", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-check"></span>
                            </span>
                            @{
                                List<Category> Categories = ViewBag.Categories as List<Category>;
                            }

                            <select name="CategoryId" class="form-control">
                                <option selected="selected" disabled>-Select Category-</option>
                                @foreach (var item in Categories)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default btn-custom">Edit SubCategory</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

