@model IEnumerable<ShoppingApplication.Models.Role>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Roles</h2>

    <p>
        @Html.ActionLink("Add New Role", "AddRole")
    </p>
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>
                    Role Id
                </th>
                <th>
                    Role
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a href="/Admin/EditRole/@item.Id">Edit</a> | 
                        <a href="/Admin/DeleteRole/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>