@model IEnumerable<ShoppingApplication.Models.City>

@{
    ViewBag.Title = "Cities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Cities</h2>
    <p>
        @Html.ActionLink("Add New City", "AddCity")
    </p>
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>
                    City Id
                </th>
                <th>
                    City Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a href="/Admin/EditCity/@item.Id">Edit</a> |
                        <a href="/Admin/DeleteCity/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>