@using ShoppingApplication.Models
@model User
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add New User</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "User's Name", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-envelope"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "User's Email", type = "email", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-phone"></span>
                            </span>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "User's PhoneNumber", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user-tag"></span>
                            </span>
                            @{
                                List<Role> Roles = ViewBag.Roles as List<Role>;
                            }
                            <select name="RoleId" class="form-control">
                                <option selected="selected" disabled>-Select Role-</option>
                                @foreach (var item in Roles)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-lock"></span>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "User's Password", required = "required" })
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default btn-custom">Add User</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
