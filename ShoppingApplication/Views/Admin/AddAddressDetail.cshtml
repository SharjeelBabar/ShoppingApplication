@using ShoppingApplication.Models
@model AddressDetail
@{
    ViewBag.Title = "AddAddressDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add Address Detail</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddAddressDetail", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-home"></span>
                            </span>
                            @Html.TextBoxFor(m => m.HouseNo, new { @class = "form-control", placeholder = "House Number", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-road"></span>
                            </span>
                            @Html.TextBoxFor(m => m.StreetNo, new { @class = "form-control", placeholder = "Street No", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user"></span>
                            </span>
                            @{
                                List<User> Users = ViewBag.Users as List<User>;
                            }

                            <select name="UserId" class="form-control">
                                <option selected="selected" disabled>-Select User-</option>
                                @foreach (var item in Users)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-city"></span>
                            </span>
                            @{
                                List<City> Cities = ViewBag.Cities as List<City>;
                            }

                            <select name="CityId" class="form-control">
                                <option selected="selected" disabled>-Select City-</option>
                                @foreach (var item in Cities)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Area, new { @class = "form-control", placeholder = "Area", required = "required" })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default btn-custom">Add Address Detail</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>


