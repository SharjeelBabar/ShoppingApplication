@using ShoppingApplication.Models
@model Role
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add New Role</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddRole", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user-tag"></span>
                            </span>                            
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Role", required = "required" })
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default btn-custom">Add Role</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>



