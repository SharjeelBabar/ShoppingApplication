
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ShoppingApplication.Models
@model Product

<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add New Product</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddNewProduct", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-tag"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Product Title", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-money-bill-wave"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Product Price", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user"></span>
                            </span>
                            @{
                                List<User> Sellers = ViewBag.Sellers as List<User>;
                            }

                            <select name="SellerId" class="form-control">
                                <option selected="selected" disabled>- Select Seller -</option>
                                @foreach (var item in Sellers)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-check"></span>
                            </span>
                            @{
                                List<SubCategory> SubCategories = ViewBag.SubCategories as List<SubCategory>;
                            }

                            <select name="SUbCategoryId" class="form-control">
                                <option selected="selected" disabled>- Select SubCategory -</option>
                                @foreach (var item in SubCategories)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-check"></span>
                            </span>
                            @{
                                List<ProductStatus> ProductStatuses = ViewBag.ProductStatuses as List<ProductStatus>;
                            }

                            <select name="ProductStatusId" class="form-control">
                                <option selected="selected" disabled>- Select Product Status -</option>
                                @foreach (var item in ProductStatuses)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Product Description", required = "required" })
                    </div>
                    <div>
                        <input type="file" name="file" id="file" />
                    </div>
                    <div>
                        <input type="file" name="moreimages" id="moreimages" multiple />
                    </div>
                    @*<div>
                            <label for="file" class="btn btn-default" style="width:100%">Upload Image</label>
                            <input type="file" name="file" id="file" class="hidden" />
                        </div>*@
                    <div class="text-center" style="margin-top:5px">
                        <button type="submit" class="btn btn-default btn-custom">Add Product</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


