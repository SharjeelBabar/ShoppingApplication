@using ShoppingApplication.Models
@model User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container m-top">
   
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p class="text-danger text-center">@ViewBag.Error</p>
        }
        <div class="panel panel-default">
            <h2 class="text-center">Login</h2>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-envelope"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email", type = "email", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-lock"></span>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Your Password", required = "required" })
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default btn-custom">Login</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
